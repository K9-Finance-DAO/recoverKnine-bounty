{
    "type": "module",
    "scripts": {
        "build:contracts": "hardhat compile",
        "export:ui": "node scripts/export-ui-artifacts.mjs",
        "build:contracts:ui": "pnpm run build:contracts && pnpm run export:ui",
        "fork:mainnet": "dotenv -e .env -- bash -lc 'if [ -z \"$MAINNET_RPC_URL\" ]; then echo \"Error: MAINNET_RPC_URL is missing in .env\"; exit 1; fi; hardhat node --network hardhatMainnet --fork \"$MAINNET_RPC_URL\"'",
        "predev:ui": "pnpm run build:contracts:ui && pnpm --dir ui/deploy install",
        "dev:ui": "pnpm --dir ui/deploy dev",
        "prebuild:ui": "pnpm --dir ui/deploy install && pnpm run build:contracts:ui",
        "build:ui": "pnpm run build:contracts:ui && pnpm --dir ui/deploy build",
        "prepreview:ui": "pnpm run build:contracts:ui && pnpm --dir ui/deploy install",
        "preview:ui": "pnpm --dir ui/deploy preview",
        "compute:terms:hash": "node scripts/compute-terms-hash.mjs",
        "compute:deployment:address": "node scripts/compute-deployment-address.mjs",
        "test:fork:interactive": "hardhat run --network hardhatMainnet scripts/interactive-bounty-fork.ts",
        "test:fork:interactive:local": "hardhat run --network localhost scripts/interactive-bounty-fork.ts",
        "test:fork:interactive:help": "SCRIPT_HELP=1 hardhat run --network hardhatMainnet scripts/interactive-bounty-fork.ts",
        "test:fork:interactive:local:help": "SCRIPT_HELP=1 hardhat run --network localhost scripts/interactive-bounty-fork.ts"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-ignition": "^3.0.3",
        "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
        "@nomicfoundation/hardhat-typechain": "^3.0.0",
        "@openzeppelin/contracts": "^5.4.0",
        "@types/node": "^22.18.3",
        "dotenv-cli": "^10.0.0",
        "ethers": "^6.15.0",
        "forge-std": "github:foundry-rs/forge-std#v1.9.4",
        "hardhat": "^3.0.6",
        "hardhat-deploy": "^1.0.4",
        "typechain": "^8.3.2",
        "typescript": "~5.8.3",
        "viem": "^2.37.5"
    }
}
